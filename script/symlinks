#!/usr/bin/env sh

echo ''
echo "ğŸ”—  SYMLINKS"

for src in $(find -H "$DOTFILES_ROOT" -name '*.symlink'); do
  dest="$HOME/.$(basename "${source%.*}")"

  if [ -e "$dest" ]; then
    if [ "$src" -ef "$dest" ]; then
      echo "âœ…  $src already linked"
      return 0
    else
      mv "$dest" "$dest.bak"
      echo "âš ï¸  moved $dest to $dest.bak"
    fi
  fi

  ln -sf "$src" "$dest"
  echo "âœ…  linked $src to $dest"
done
