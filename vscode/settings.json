{
  // ---- EDITOR ----
  "editor.fontFamily": "SF Mono, Fira Code",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.renderWhitespace": "all",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.suggest.localityBonus": true,
  "editor.rulers": [
    100
  ],
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.restoreViewState": false,
  "workbench.colorCustomizations": {
    // "editorBracketMatch.background": "#7fffd573",
    // "editorBracketMatch.border": "#00ffffbd"
  },

  // ---- FILES ----
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.enableTrash": false,

  // ---- EXPLORER / WINDOW ----
  "explorer.openEditors.visible": 0,
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "window.zoomLevel": 0,

  // ---- TERMINAL ----
  "terminal.integrated.fontFamily": "SF Mono",
  "terminal.integrated.shellArgs.osx": ["-l"],

  // ---- GIT ----
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.keymap": "chorded",
  "gitlens.defaultDateFormat": "YYYY-MM-DD \\a\\t hh:mm",
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.views.repositories.location": "scm",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true
  },

  // ---- FORMATTING ----
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },

  ],
  "alignment.surroundSpace": {
    "colon": [-1, 1],
    "assignment": [1, 1],
    "arrow": [1, 1],
    "comment": 1
  },

  // ---- Bracket Pair Colorizer ----
  "bracket-pair-colorizer-2.colors": [
    "#81A1C1",
    "#B48EAD",
    "#A3BE8C",
    "#EBCB8B",
    "#D08770",
    "#BF616A",
  ],
  "bracket-pair-colorizer-2.unmatchedScopeColor": "#D8DEE9",

  // ---- RUBY ----
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLocate",
  "ruby.codeCompletion": "rcodetools",

  // ---- ELIXIR ----
  "[elixir]": {
    "editor.quickSuggestions": true
  },

  // ---- PYTHON ----
  "python.pythonPath": "/usr/local/bin/python3",
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],
  "[python]": {
    "editor.tabSize": 4
  },

  "[rust]": {
    "editor.tabSize": 4
  },

  // ---- MIXED ----
  "diffEditor.ignoreTrimWhitespace": false,
  "docker.images.groupBy": "Repository",
  "extensions.autoUpdate": false,
  "eslint.packageManager": "yarn",
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "breadcrumbs.enabled": false,
  "latex-workshop.message.update.show": false,
  "latex-workshop.view.pdf.viewer": "tab",
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "workbench.colorTheme": "Nord",
  "elixirLS.suggestSpecs": false
}
